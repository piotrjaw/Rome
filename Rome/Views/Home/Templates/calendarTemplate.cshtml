<md-item class="header">
    <md-button ng-click="previous()"><md-icon md-svg-icon="/Img/Icons/chevron-left.svg" class="icon-grey" aria-label="poprzedni miesiąc"></md-icon></md-button>
    <md-item>{{month.format("MMMM YYYY")}}</md-item>
    <md-button ng-click="next()"><md-icon md-svg-icon="/Img/Icons/chevron-right.svg" class="icon-grey" aria-label="następny miesiąc"></md-icon></md-button>
</md-item>
<md-item class="week names">
    <md-item class="day">Po</md-item>
    <md-item class="day">Wt</md-item>
    <md-item class="day">Śr</md-item>
    <md-item class="day">Cz</md-item>
    <md-item class="day">Pi</md-item>
    <md-item class="day">So</md-item>
    <md-item class="day">Ni</md-item>
</md-item>
<md-item class="week" ng-repeat="week in weeks">
    <md-item class="day" ng-class="{ today: day.isToday, 'different-month': !day.isCurrentMonth, selected: day.date.isSame(selected) }" ng-click="select(day)" ng-repeat="day in week.days">{{day.number}}</md-item>
</md-item>