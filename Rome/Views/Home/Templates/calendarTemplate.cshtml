<md-item layout-column class="md-whiteframe-z2 white">
    <md-item class="header" layout="row" layout-align="space-between center">
        <md-button ng-click="previous()"><md-icon md-svg-icon="/Img/Icons/chevron-left.svg" class="icon-grey" aria-label="poprzedni miesiąc"></md-icon></md-button>
        <md-button class="md-title">{{month.format("MMMM YYYY")}}</md-button>
        <md-button ng-click="next()"><md-icon md-svg-icon="/Img/Icons/chevron-right.svg" class="icon-grey" aria-label="następny miesiąc"></md-icon></md-button>
    </md-item>
    <md-item layout="column">
        <md-content class="week names paper2 md-body-2" layout="row" layout-fill flex>
            <md-toolbar layout-fill flex class="day-header md-whiteframe-z1 md-accent md-subhead">Poniedziałek</md-toolbar>
            <md-toolbar layout-fill flex class="day-header md-whiteframe-z1 md-accent md-subhead">Wtorek</md-toolbar>
            <md-toolbar layout-fill flex class="day-header md-whiteframe-z1 md-accent md-subhead">Środa</md-toolbar>
            <md-toolbar layout-fill flex class="day-header md-whiteframe-z1 md-accent md-subhead">Czwartek</md-toolbar>
            <md-toolbar layout-fill flex class="day-header md-whiteframe-z1 md-accent md-subhead">Piątek</md-toolbar>
            <md-toolbar layout-fill flex class="day-header md-whiteframe-z1 md-accent md-subhead">Sobota</md-toolbar>
            <md-toolbar layout-fill flex class="day-header md-whiteframe-z1 md-accent md-subhead">Niedziela</md-toolbar>
    </md-item>
    <md-item class="calendar">               
        <md-item layout="column" layout-align="space-around center">
            <md-item class="week md-body-1" ng-repeat="week in weeks" layout-fill layout-align="center space-around" layout="row">
                <md-button class="day md-whiteframe-z1" ng-class="{ 'md-primary md-raised md-hue-2': day.isToday, 'different-month': !day.isCurrentMonth, selected: day.date.isSame(selected) }" ng-click="moveTo(day)" ng-repeat="day in week.days track by day.date" layout-fill layout="row" layout-align="space-between center">
                    <md-item>{{day.number}}</md-item>
                    <md-item flex></md-item>
                    <md-item ng-repeat="(GroupEventDay, GroupedEvents) in events | groupBy: 'EventDate | truncDate'">
                        <md-button class="md-fab md-warn small-button" aria-label="notification" ng-if='"" + (GroupEventDay | truncDate) == "" + (day.date | truncDate) && day.isCurrentMonth' layout="row" layout-align="center center">{{GroupedEvents.length}}</md-button>
                    </md-item>
                </md-button>
            </md-item>
        </md-item>
    </md-item>
</md-item>