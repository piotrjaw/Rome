<md-content layout-column layout-fill class="md-whiteframe-z2 white">
    <md-item class="header" layout="row" layout-align="space-between center">
        <md-button ng-click="previousWeek()"><md-icon md-svg-icon="/Img/Icons/chevron-left.svg" class="icon-grey" aria-label="poprzedni tydzień"></md-icon></md-button>
        <md-button class="calendar-button md-headline">{{title}}</md-button>
        <md-button ng-click="nextWeek()"><md-icon md-svg-icon="/Img/Icons/chevron-right.svg" class="icon-grey" aria-label="następny tydzień"></md-icon></md-button>
    </md-item>
    <md-item-content layout="column" layout-fill>
        <md-item layout="row">
            <md-item class="week" ng-repeat="day in days" layout-fill flex layout-align="center center" layout="column">
                <md-toolbar layout="column" layout-align="center center" md-theme="default" class="day-header md-accent">
                    <md-item class="md-subhead">{{day.name}}</md-item>
                    <md-item class="md-subhead">{{day.date.local().format("YYYY-MM-DD")}}</md-item>
                </md-toolbar>
                <md-item ng-repeat="hour in day.hours" class="paper md-padding">
                    <md-divider></md-divider>
                    <md-item>{{hour.name}}</md-item>
                </md-item>
            </md-item>
        </md-item>
    </md-item-content>
</md-content>
