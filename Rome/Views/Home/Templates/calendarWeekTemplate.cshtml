<md-content layout-column layout-fill class="md-whiteframe-z2 white">
    <md-item class="header">
        <md-button ng-click="previous()"><md-icon md-svg-icon="/Img/Icons/chevron-left.svg" class="icon-grey" aria-label="poprzedni miesiąc"></md-icon></md-button>
        <md-item>{{month.format("MMMM YYYY")}}</md-item>
        <md-button ng-click="next()"><md-icon md-svg-icon="/Img/Icons/chevron-right.svg" class="icon-grey" aria-label="następny miesiąc"></md-icon></md-button>
    </md-item>
    <md-item-content layout="column" layout-fill>
        <md-item class="week names paper" layout="row" layout-fill flex>
            <md-item layout-fill flex class="day">Po</md-item>
            <md-item layout-fill flex class="day">Wt</md-item>
            <md-item layout-fill flex class="day">Śr</md-item>
            <md-item layout-fill flex class="day">Cz</md-item>
            <md-item layout-fill flex class="day">Pi</md-item>
            <md-item layout-fill flex class="day">So</md-item>
            <md-item layout-fill flex class="day">Ni</md-item>
        </md-item>
        <md-item layout="row">
            <md-item class="week" ng-repeat="day in days" layout-fill flex layout-align="center center" layout="column">
                <md-item>{{day.date}}</md-item>
                <md-item ng-repeat="hour in day.hours" >
                    <md-divider></md-divider>
                    <md-item>{{hour.name}}</md-item>
                </md-item>
            </md-item>
        </md-item>
    </md-item-content>
</md-content>
