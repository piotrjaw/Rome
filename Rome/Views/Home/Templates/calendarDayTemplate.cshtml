<md-item layout-column class="md-whiteframe-z2 white"> 
    <md-item class="header" layout="row" layout-align="space-between center">
        <md-button ng-click="previousDay()"><md-icon md-svg-icon="/Img/Icons/chevron-left.svg" class="icon-grey" aria-label="poprzedni dzień"></md-icon></md-button>
        <md-button ng-click="pickDate(selected)" class="calendar-button md-headline">{{selected.format('LL')}}</md-button>
        <md-button ng-click="nextDay()"><md-icon md-svg-icon="/Img/Icons/chevron-right.svg" class="icon-grey" aria-label="następny dzień"></md-icon></md-button>
    </md-item>
    <md-item layout="column">
        <md-item ng-repeat="hour in hours" layout="column">
            <md-divider></md-divider>
            <md-item layout="row" layout-align="start center" class="paper md-padding">
                <md-item>{{hour.name}}</md-item>
                <md-item ng-repeat="(groupedEventHour, groupedEvents) in events | groupBy: ' EventDate | truncHour'" ng-if='" " + (groupedEventHour | truncHour) == " " + (hour.date | truncHour)' layout="row" layout-align="space-around center">
                    <md-item ng-repeat="event in groupedEvents" flex class="event-wrapper">
                        <md-item layout="column" layout-align="space-between center">
                            <md-item>Wydarzenie: {{event.EventDate | jsDate | date: 'h:mm'}}</md-item>
                            <md-item>Klient: {{event.Client.Owner}}, {{event.Client.CompanyName}}</md-item>
                        </md-item>
                    </md-item>
                </md-item>
            </md-item>
        </md-item>
    </md-item>
</md-item>