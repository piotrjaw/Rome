<div ng-app="myApp" lang="pl">
    <div layout="column" data-ng-controller="mainCtrl">
        <md-toolbar layout="row" layout-align="center start">
            <md-icon class="logo" md-svg-src ="/Img/Svg/TaxCare.svg" aria-hidden="true"></md-icon>
            <button ng-click="toggleSidenav('left')" hide-gt-sm class="menuBtn" aria-label="menu" >
                <md-icon md-svg-icon="/Img/Icons/menu.svg" class="icon-white"></md-icon>
            </button>
            <h1 class="md-toolbar-tools" layout-align-gt-sm="center">Nowy Cross-sell</h1>
        </md-toolbar>
        <md-item layout="row" flex class="content-wrapper" ng-controller="tabCtrl as tab">
            <md-item layout="column">
                <md-sidenav layout="column" class="md-sidenav-left md-whiteframe-z2" md-component-id="left" md-is-locked-open="$mdMedia('gt-sm')" flex>
                    <md-item>
                        <md-list layout="column" layout-align="center start" class="menu-list">
                            <md-button class="inner-wrapper" ng-class="{ active:tab.isSet(1) }" ng-click="tab.setTab(1)">Klienci</md-button>
                            <md-button class="inner-wrapper" ng-class="{ active:tab.isSet(2) }" ng-click="tab.setTab(2)">Dostęp</md-button>
                            <md-button class="inner-wrapper" ng-class="{ active:tab.isSet(3) }" ng-click="tab.setTab(3)">Kalendarz</md-button>
                            <md-button class="inner-wrapper" ng-class="{ active:tab.isSet(4) }" ng-click="tab.setTab(4)">Spotkania</md-button>
                        </md-list>
                    </md-item>
                </md-sidenav>
            </md-item>
            <md-item flex ng-show="tab.isSet(1)" ng-include="'Home/Templates/ClientList'"></md-item>
            <md-item flex ng-show="tab.isSet(2)" ng-include="'Home/Templates/AccountCreation'"></md-item>
            <md-item flex ng-show="tab.isSet(3)" ng-include="'Home/Templates/Calendar'"></md-item>
            <md-item flex ng-show="tab.isSet(4)" ng-include="'Home/Templates/Meetings'"></md-item>
        </md-item>
    </div>
</div>