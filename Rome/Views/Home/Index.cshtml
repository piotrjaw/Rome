<md-item class="wrapper" ng-app="myApp" lang="pl">
    <md-item data-ng-controller="tabCtrl as tab">
        <md-item layout="row" data-ng-controller="mainCtrl" class="layout-wrapper">
            <md-sidenav layout="column" class="sidenav-wrapper md-whiteframe-z1" md-is-locked-open="$mdMedia('gt-sm')" md-component-id="left">
                <md-toolbar>
                    <md-icon class="logo" md-svg-src="logo" aria-hidden="true"></md-icon>
                </md-toolbar>
                <md-content layout="column" class="md-sidenav-left" flex>
                    <md-item>
                        <md-list layout="column" layout-align="center start" class="menu-list md-3-line" flex="100">
                            <md-button layout-fill class="inner-wrapper" ng-class="{ active:tab.isSet(1) }" ng-click="tab.setTab(1)">Klienci</md-button>
                            <md-divider></md-divider>
                            <md-button layout-fill class="inner-wrapper" ng-class="{ active:tab.isSet(2) }" ng-click="tab.setTab(2)">Dostęp</md-button>
                            <md-divider></md-divider>
                            <md-button layout-fill class="inner-wrapper" ng-class="{ active:tab.isSet(3) }" ng-click="tab.setTab(3)">Kalendarz</md-button>
                            <md-divider></md-divider>
                            <md-button layout-fill class="inner-wrapper" ng-class="{ active:tab.isSet(4) }" ng-click="tab.setTab(4)">Spotkania</md-button>
                            <md-divider></md-divider>
                            <md-button layout-fill class="inner-wrapper" ng-class="{ active:tab.isSet(5) }" ng-click="tab.setTab(5)">Struktura</md-button>
                            <md-divider></md-divider>
                        </md-list>
                    </md-item>
                </md-content>
            </md-sidenav>
            <md-item layout="column" flex>
                <md-toolbar layout="row" layout-align="center start">
                    <md-button ng-click="toggleSidenav('left')" hide-gt-sm class="menuBtn" aria-label="menu" layout-align="center center">
                        <md-icon md-svg-icon="/Img/Icons/menu.svg" class="icon-white"></md-icon>
                    </md-button>
                    <h1 class="md-toolbar-tools" layout-align-gt-sm="center">Nowy Cross-sell</h1>
                </md-toolbar>
                <md-content flex class="content-wrapper">
                    <md-item flex layout-fill class="tab-viewport animate-show" ng-if="tab.isSet(1)" ng-include="'Home/Templates/ClientList'"></md-item>
                    <md-item flex layout-fill class="tab-viewport animate-show" ng-if="tab.isSet(2)" ng-include="'Home/Templates/AccountCreation'"></md-item>
                    <md-item flex layout-fill class="tab-viewport animate-show" ng-if="tab.isSet(3)" ng-include="'Home/Templates/Calendar'"></md-item>
                    <md-item flex layout-fill class="tab-viewport animate-show" ng-if="tab.isSet(4)" ng-include="'Home/Templates/Meetings'"></md-item>
                    <md-item flex layout-fill class="tab-viewport animate-show" ng-if="tab.isSet(5)" ng-include="'Home/Templates/Branches'"></md-item>
                </md-content>
            </md-item>
        </md-item>
    </md-item>
</md-item>