<md-bottom-sheet class="md-has-header" ng-app="myApp">
    <md-item ng-controller="mainCtrl">
        <md-item ng-show="loading">
            Ładuję dane klientów...
        </md-item>
        <md-item ng-hide="loading">
            <md-item ng-repeat="Client in Clients" class="md-list">
                <md-content>
                    <md-card>
                        <md-buttons ng-click="ClientShowStatus = !ClientShowStatus" class="md-body-1">{{Client.CompanyName}}</md-buttons>
                        <md-item ng-show="ClientShowStatus" ng-animate="{show: 'animate-enter', hide: 'animate-hide'}">
                            <md-list class="md-list">
                                <md-item class="md-body-1">{{Client.ClientId}}</md-item>
                                <md-item class="md-body-1">{{Client.Owner}}</md-item>
                                <md-item class="md-body-1">{{Client.CompanyName}}</md-item>
                            </md-list>
                        </md-item>
                    </md-card>
                </md-content>
            </md-item>
        </md-item>
    </md-item>
</md-bottom-sheet>